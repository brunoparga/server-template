{
  "name": "server-template",
  "version": "0.1.0",
  "description": "Server for a RESTful API",
  "engines": {
    "node": "14.15.4"
  },
  "type": "commonjs",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start-dev": "nodemon app.js",
    "migrate": "npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
    "test": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --testTimeout=10000",
    "test-unit": "cross-env NODE_ENV=test jest --group=unit",
    "test-e2e": "cross-env NODE_ENV=test jest --group=e2e --detectOpenHandles --testTimeout=10000"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/brunoparga/server-template.git"
  },
  "author": "Bruno Parga",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brunoparga/server-template/issues"
  },
  "homepage": "https://github.com/brunoparga/server-template#readme",
  "jest": {
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!./models/index.js",
      "!*eslintrc*",
      "!./coverage/**",
      "!./**/202*"
    ],
    "runner": "groups",
    "testEnvironment": "node"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.17.0",
    "eslint-config-hardcore": "^15.2.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-inclusive-language": "^1.2.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-woke": "^1.0.0",
    "expect-more-jest": "^5.2.1",
    "jest": "^26.6.3",
    "jest-runner-groups": "^2.0.1",
    "nodemon": "^2.0.7",
    "sequelize-cli": "^6.2.0",
    "sinon": "^9.2.3",
    "supertest": "^6.0.1"
  }
}
